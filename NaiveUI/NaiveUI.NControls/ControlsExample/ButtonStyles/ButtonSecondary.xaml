<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:NaiveUI.NControls.Attach">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/NaiveUI.NControls;component/ControlsExample/ButtonStyles/ButtonBase.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style
        x:Key="SecondaryDefault"
        BasedOn="{StaticResource DefaultButton}"
        TargetType="Button">
        <Setter Property="attach:TriggerBackgroundAttach.TriggerBackground" Value="Red" />
        <Setter Property="Background" Value="#F4F5F5" />
        <Setter Property="attach:EffectSizeAttach.EffectSize" Value="0" />
        <Setter Property="BorderBrush" Value="#F4F5F5" />
        <Setter Property="Foreground" Value="#4E475A" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style
        x:Key="SecondaryTertiary"
        BasedOn="{StaticResource Tertiary}"
        TargetType="Button">
        <Setter Property="Background" Value="#F4F5F5" />
        <Setter Property="BorderBrush" Value="#F4F5F5" />
        <Setter Property="attach:EffectSizeAttach.EffectSize" Value="0" />
        <Setter Property="Foreground" Value="#7E8CA3" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style
        x:Key="SecondaryPrimary"
        BasedOn="{StaticResource Primary}"
        TargetType="Button">
        <Setter Property="Background" Value="#DAF0E4" />
        <Setter Property="Foreground" Value="#18A264" />
        <Setter Property="attach:EffectSizeAttach.EffectSize" Value="0" />
        <Setter Property="BorderBrush" Value="#DAF0E4" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style
        x:Key="SecondaryInfo"
        BasedOn="{StaticResource SecondaryPrimary}"
        TargetType="Button">
        <Setter Property="Background" Value="#DBEBFD" />
        <Setter Property="Foreground" Value="#518AF0" />
        <Setter Property="BorderBrush" Value="#DBEBFD" />
    </Style>

    <Style
        x:Key="SecondarySuccess"
        BasedOn="{StaticResource SecondaryPrimary}"
        TargetType="Button" />

    <Style
        x:Key="SecondaryWarning"
        BasedOn="{StaticResource SecondaryPrimary}"
        TargetType="Button">
        <Setter Property="Background" Value="#FDF0DB" />
        <Setter Property="Foreground" Value="#F3AB2D" />
        <Setter Property="BorderBrush" Value="#FDF0DB" />
    </Style>


    <Style
        x:Key="SecondaryError"
        BasedOn="{StaticResource SecondaryPrimary}"
        TargetType="Button">
        <Setter Property="Background" Value="#F7DEE3" />
        <Setter Property="Foreground" Value="#D14775" />
        <Setter Property="BorderBrush" Value="#F7DEE3" />
    </Style>

</ResourceDictionary>