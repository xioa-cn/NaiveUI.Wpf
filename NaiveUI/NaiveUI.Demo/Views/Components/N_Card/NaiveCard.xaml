<UserControl
    x:Class="NaiveUI.Demo.Views.Components.N_Card.NaiveCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NaiveUI.Demo.Views.Components.N_Card"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nu="clr-namespace:NaiveUI.NControls.ControlsExample;assembly=NaiveUI.NControls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <!--  基础用法  -->
                <nu:CardElement Margin="20" BoderColor="Red">
                    <nu:CardElement.HeaderElement>
                        <Border Margin="20,10">
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="基础用法" />
                        </Border>
                    </nu:CardElement.HeaderElement>
                    <nu:CardElement.ContentElement>
                        <StackPanel Margin="10">
                            <TextBlock
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                TextWrapping="Wrap">
                                基础卡片使用 CardElement本体 HeaderElement插槽 ContentElement插槽
                                点击边框会变色哦~ BoderColor控制边框颜色 变色会变成主题主颜色 Main.Color
                            </TextBlock>
                            <nu:CardElement Margin="10">
                                <nu:CardElement.HeaderElement>
                                    <Border Margin="20,10">
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="20"
                                            Text="基础卡片" />
                                    </Border>
                                </nu:CardElement.HeaderElement>
                                <nu:CardElement.ContentElement>
                                    <StackPanel Margin="10">
                                        <TextBlock>基础卡片</TextBlock>
                                    </StackPanel>
                                </nu:CardElement.ContentElement>
                            </nu:CardElement>
                        </StackPanel>
                    </nu:CardElement.ContentElement>
                </nu:CardElement>

                <!--  封面  -->
                <nu:CardElement Margin="20" BoderColor="Red">
                    <nu:CardElement.HeaderElement>
                        <Border Margin="20,10">
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="封面" />
                        </Border>
                    </nu:CardElement.HeaderElement>
                    <nu:CardElement.ContentElement>
                        <StackPanel Margin="10">
                            <TextBlock
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                TextWrapping="Wrap">
                                HeaderElement 添加封面图
                            </TextBlock>
                            <nu:CardElement
                                Width="220"
                                Margin="10"
                                HorizontalAlignment="Left">
                                <nu:CardElement.HeaderElement>
                                    <StackPanel Margin="20,10">
                                        <Image
                                            Width="200"
                                            Height="200"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            Source="https://c-ssl.duitang.com/uploads/blog/202212/18/20221218144515_64111.jpg" />
                                        <Border Margin="0,10">
                                            <TextBlock
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="20"
                                                Text="封面图" />
                                        </Border>
                                    </StackPanel>
                                </nu:CardElement.HeaderElement>
                                <nu:CardElement.ContentElement>
                                    <StackPanel Margin="20">
                                        <TextBlock>卡片内容</TextBlock>
                                    </StackPanel>
                                </nu:CardElement.ContentElement>
                            </nu:CardElement>
                        </StackPanel>
                    </nu:CardElement.ContentElement>
                </nu:CardElement>

                <!--  Footer  -->
                <nu:CardElement Margin="20" BoderColor="Red">
                    <nu:CardElement.HeaderElement>
                        <Border Margin="20,10">
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="Footer" />
                        </Border>
                    </nu:CardElement.HeaderElement>
                    <nu:CardElement.ContentElement>
                        <StackPanel Margin="10">
                            <TextBlock
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                TextWrapping="Wrap">
                                Footer 插槽 FooterBackgroundBrush可控制Footer背景
                            </TextBlock>
                            <nu:CardElement Margin="10" FooterBackgroundBrush="#FAFAFC">
                                <nu:CardElement.HeaderElement>
                                    <Border Margin="20,10">
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="20"
                                            Text="#Header" />
                                    </Border>
                                </nu:CardElement.HeaderElement>
                                <nu:CardElement.ContentElement>
                                    <StackPanel Margin="10">
                                        <TextBlock>#Content</TextBlock>
                                    </StackPanel>
                                </nu:CardElement.ContentElement>
                                <nu:CardElement.FooterElement>
                                    <Border Margin="10">
                                        <TextBlock FontWeight="Bold">#Footer</TextBlock>
                                    </Border>
                                </nu:CardElement.FooterElement>
                            </nu:CardElement>
                        </StackPanel>
                    </nu:CardElement.ContentElement>
                </nu:CardElement>

                <!--  没有标题  -->
                <nu:CardElement Margin="20" BoderColor="Red">
                    <nu:CardElement.HeaderElement>
                        <Border Margin="20,10">
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="没有标题" />
                        </Border>
                    </nu:CardElement.HeaderElement>
                    <nu:CardElement.ContentElement>
                        <StackPanel Margin="10">
                            <TextBlock
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                TextWrapping="Wrap">
                                谁说卡片一定要有标题呢。
                            </TextBlock>
                            <nu:CardElement Margin="10" FooterBackgroundBrush="#FAFAFC">
                                <nu:CardElement.ContentElement>
                                    <StackPanel Margin="10">
                                        <TextBlock>#Content</TextBlock>
                                    </StackPanel>
                                </nu:CardElement.ContentElement>

                            </nu:CardElement>
                        </StackPanel>
                    </nu:CardElement.ContentElement>
                </nu:CardElement>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <!--  无边框  -->
                <nu:CardElement Margin="20" BoderColor="Red">
                    <nu:CardElement.HeaderElement>
                        <Border Margin="20,10">
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="无边框" />
                        </Border>
                    </nu:CardElement.HeaderElement>
                    <nu:CardElement.ContentElement>
                        <StackPanel Margin="10">
                            <TextBlock
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                TextWrapping="Wrap">
                                无边框卡片使用 OpenBordered 属性
                            </TextBlock>
                            <nu:CardElement Margin="10" OpenBordered="False">
                                <nu:CardElement.HeaderElement>
                                    <Border Margin="20,10">
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="20"
                                            Text="基础卡片无边框" />
                                    </Border>
                                </nu:CardElement.HeaderElement>
                                <nu:CardElement.ContentElement>
                                    <StackPanel Margin="10">
                                        <TextBlock>基础卡片无边框</TextBlock>
                                    </StackPanel>
                                </nu:CardElement.ContentElement>
                            </nu:CardElement>
                        </StackPanel>
                    </nu:CardElement.ContentElement>
                </nu:CardElement>

                <!--  可悬浮  -->
                <nu:CardElement Margin="20" BoderColor="Red">
                    <nu:CardElement.HeaderElement>
                        <Border Margin="20,10">
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="可悬浮" />
                        </Border>
                    </nu:CardElement.HeaderElement>
                    <nu:CardElement.ContentElement>
                        <StackPanel Margin="10">
                            <TextBlock
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                TextWrapping="Wrap">
                                可悬浮卡片使用 Hoverable 属性 使用 HoverableBackground 属性设置悬浮颜色
                            </TextBlock>
                            <nu:CardElement
                                Margin="10"
                                Hoverable="True"
                                HoverableBackground="Yellow"
                                OpenBordered="True">
                                <nu:CardElement.HeaderElement>
                                    <Border Margin="20,10">
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="20"
                                            Text="基础卡片可悬浮" />
                                    </Border>
                                </nu:CardElement.HeaderElement>
                                <nu:CardElement.ContentElement>
                                    <StackPanel Margin="10">
                                        <TextBlock>基础卡片可悬浮</TextBlock>
                                    </StackPanel>
                                </nu:CardElement.ContentElement>
                            </nu:CardElement>
                        </StackPanel>
                    </nu:CardElement.ContentElement>
                </nu:CardElement>
                <!--  加载中  -->
                <nu:CardElement Margin="20" BoderColor="Red">
                    <nu:CardElement.HeaderElement>
                        <Border Margin="20,10">
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="加载中" />
                        </Border>
                    </nu:CardElement.HeaderElement>
                    <nu:CardElement.ContentElement>
                        <StackPanel Margin="10">
                            <TextBlock
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                TextWrapping="Wrap">
                                加载中卡片使用 Skeleton 属性来显示骨骼
                            </TextBlock>
                            <nu:N_Switch
                                Margin="10"
                                HorizontalAlignment="Left"
                                Click="N_SwitchClick"
                                GroupName="group1"
                                IsChecked="True"
                                RailHeight="30"
                                RailWidth="70" />
                            <TextBlock Margin="10" Text="{Binding ElementName=LoadingCardElement, Path=Skeleton}" />
                            <nu:CardElement
                                Name="LoadingCardElement"
                                Margin="10"
                                OpenBordered="True"
                                Skeleton="Loading">
                                <nu:CardElement.HeaderElement>
                                    <Border Margin="20,10">
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="20"
                                            Text="基础卡片加载中" />
                                    </Border>
                                </nu:CardElement.HeaderElement>
                                <nu:CardElement.ContentElement>
                                    <StackPanel Margin="10">
                                        <TextBlock>基础卡片加载中</TextBlock>
                                    </StackPanel>
                                </nu:CardElement.ContentElement>
                            </nu:CardElement>
                        </StackPanel>
                    </nu:CardElement.ContentElement>
                </nu:CardElement>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
